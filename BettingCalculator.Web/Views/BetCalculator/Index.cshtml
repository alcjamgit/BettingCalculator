
@{
    ViewBag.Title = "Calculator";
}

<style>
    #bet-selection-table th{
        text-align:center;
    }
   
    .bet-selection-win-odd-cell{
        padding-left:0 !important;
        padding-right:0 !important;
    }

</style>

<h3 class="text-center">Bet Calculator</h3>
<div class="row">

    <div class="col-md-6 col-md-offset-3">

        <br />
        <form>
            <fieldset>
                <legend>Bet Type</legend>

                <div class="form-group">
                    <select id='selectedBetType'>
                        <optgroup label="Basic">
                            <option value="1" data-min-selection="1" data-max-selection="20" data-has-bonus="false">Single</option>
                            <option value="2" data-min-selection="2" data-max-selection="20" data-has-bonus="false">Double</option>
                            <option value="3" data-min-selection="3" data-max-selection="20" data-has-bonus="false">Treble</option>
                            <option value="4" data-min-selection="4" data-max-selection="20" data-has-bonus="false">Accumulator</option>
                            <optgroup>
                                <optgroup label="Full Cover">
                                    <option value="5" data-min-selection="3" data-max-selection="20" data-has-bonus="false">Trixie</option>
                                    <option value="6" data-min-selection="4" data-max-selection="20" data-has-bonus="false">Yankee</option>
                                    <option value="7" data-min-selection="5" data-max-selection="20" data-has-bonus="false">Canadian</option>
                                    <option value="8" data-min-selection="6" data-max-selection="15" data-has-bonus="false">Heinz</option>
                                    <option value="9" data-min-selection="7" data-max-selection="15" data-has-bonus="false">Super Heinz</option>
                                    <option value="10" data-min-selection="8" data-max-selection="15" data-has-bonus="false">Goliath</option>
                                    <option value="11" data-min-selection="9" data-max-selection="12" data-has-bonus="false">Block</option>
                                </optgroup>
                                <optgroup label="Full Cover With Singles">
                                    <option value="12" data-min-selection="3" data-max-selection="20" data-has-bonus="false">Patent</option>
                                    <option value="13" data-min-selection="4" data-max-selection="20" data-has-bonus="false">Yap</option>
                                    <option value="14" data-min-selection="4" data-max-selection="20" data-has-bonus="true">Lucky 15</option>
                                    <option value="15" data-min-selection="5" data-max-selection="20" data-has-bonus="true">Lucky 31</option>
                                    <option value="16" data-min-selection="6" data-max-selection="15" data-has-bonus="true">Lucky 63</option>
                                    <option value="17" data-min-selection="7" data-max-selection="15" data-has-bonus="false">Super Heinz with Singles</option>
                                    <option value="18" data-min-selection="8" data-max-selection="15" data-has-bonus="false">Goliath with Singles</option>
                                    <option value="19" data-min-selection="9" data-max-selection="12" data-has-bonus="false">Block with Singles</option>
                                </optgroup>
                                <optgroup label="Any To Come">
                                    <option value="20" data-min-selection="2" data-max-selection="20" data-has-bonus="false">SSA</option>
                                    <option value="21" data-min-selection="2" data-max-selection="20" data-has-bonus="false">DSA</option>
                                    <option value="22" data-min-selection="3" data-max-selection="20" data-has-bonus="false">Round Robin</option>
                                    <option value="23" data-min-selection="4" data-max-selection="20" data-has-bonus="false">Flag</option>
                                    <option value="24" data-min-selection="5" data-max-selection="20" data-has-bonus="false">Super Flag</option>
                                    <option value="25" data-min-selection="6" data-max-selection="15" data-has-bonus="false">Heinz Flag</option>
                                    <option value="26" data-min-selection="7" data-max-selection="20" data-has-bonus="false">Super Heinz Flag</option>
                                    <option value="27" data-min-selection="8" data-max-selection="15" data-has-bonus="false">Goliath Flag</option>
                                </optgroup>
                                <optgroup label="Speciality">
                                    <option value="28" data-min-selection="3" data-max-selection="20" data-has-bonus="false">Rounder</option>
                                    <option value="29" data-min-selection="3" data-max-selection="20" data-has-bonus="false">Roundabout</option>
                                    <option value="30" data-min-selection="5" data-max-selection="5" data-has-bonus="false">Fivespot</option>
                                    <option value="31" data-min-selection="6" data-max-selection="6" data-has-bonus="false">Pontoon</option>
                                    <option value="32" data-min-selection="7" data-max-selection="7" data-has-bonus="false">Magnificent 7</option>
                                    <option value="33" data-min-selection="6" data-max-selection="6" data-has-bonus="true">Alphabet</option>
                                    <option value="34" data-min-selection="9" data-max-selection="9" data-has-bonus="false">Bookies Nightmare</option>
                                    <option value="35" data-min-selection="9" data-max-selection="9" data-has-bonus="false">Union Jack Treble</option>
                                    <option value="36" data-min-selection="9" data-max-selection="9" data-has-bonus="false">Union Jack Trixie</option>
                                    <option value="37" data-min-selection="9" data-max-selection="9" data-has-bonus="false">Union Jack Patent</option>
                                    <option value="38" data-min-selection="9" data-max-selection="9" data-has-bonus="false">Union Jack Round Robin</option>
                                </optgroup>
                    </select>
                </div>
            </fieldset>

            <br />

            <fieldset>
                <legend>
                    Bet Options <a data-toggle="tooltip" class="tooltip-link" data-original-title="Bet type options">
                        <span class="glyphicon glyphicon-info-sign"></span>
                    </a>
                </legend>

                <div class="form-horizontal">

                    <div class="form-group">
                        <div class="col-md-5 col-xs-6">
                            <label class="control-label">Unit Stake</label>
                            <div><small>minimum: 0.01</small></div>
                        </div>
                        <div class="col-md-3 col-xs-6">
                            <input id="unitStake" class="form-control" type="number">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-5 col-xs-6">
                            <label class="control-label">Each Way</label>
                        </div>
                        <div class="col-md-6 col-xs-6">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button type="button" class="btn btn-default each-way-toggle" data-each-way-value="yes">Yes</button>
                                <button type="button" class="btn btn-default each-way-toggle" data-each-way-value="no">No</button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-5 col-xs-6">
                            <label class="control-label">Number of Selections</label>
                            <div id="rangedSelectionContainer"><small id="selectionCountMin">1</small><small>..</small><small id="selectionCountMax">20</small></div>
                            <div id="fixedSelectionContainer" class="hidden"><small id="fixedSelectionCount">1</small></div>
                        </div>
                        <div class="col-md-2 col-xs-3">
                            <input id="betSelectionCount" class="form-control" type="number">
                        </div>
                        <div class="col-md-2 col-xs-2 pl0">
                            <button id="set-bet-selection" type="button" class="btn btn-default">Set</button>
                        </div>
                    </div>

                </div>
            </fieldset>

            <br />

            <fieldset id="bonusOptionContainer" class="hidden">
                <legend>Bonus</legend>

                <div class="form-horizontal">

                    <div class="form-group">
                        <div class="col-md-5 col-xs-6">
                            <label class="control-label">Bonus</label>
                        </div>
                        <div class="col-md-6 col-xs-6">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button type="button" class="btn btn-default bonus-toggle" data-bonus-value="yes">Yes</button>
                                <button type="button" class="btn btn-default bonus-toggle" data-bonus-value="no">No</button>
                            </div>
                        </div>
                    </div>

                </div>
            </fieldset>
            
            <fieldset>
                <legend>
                    Selections <a data-toggle="tooltip" class="tooltip-link" data-original-title="Selections">
                        <span class="glyphicon glyphicon-info-sign"></span>
                    </a>
                </legend>
                <table class="table" id="bet-selection-table">

                    <thead>
                        <tr>
                            <th>...</th>
                            <th>Status</th>
                            <th colspan="3">Win Odds</th>
                            <th>Place</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td width="9%"><button type="button" class="btn btn-default">1</button></td>
                            <td width="30%">
                                <select class="bet-status-picker">
                                    <option value="won">Won</option>
                                    <option value="placed">Placed</option>
                                    <option value="lost">Lost</option>
                                    <option value="voidnr">Void NR</option>
                                </select>
                            </td>
                            <td width="20%" class="bet-selection-win-odd-cell">
                                <input type="number" class="form-control win-odd-numerator" value="1">
                            </td>
                            <td width="1%" style="vertical-align:middle">
                                <span class="win-odd-slash">/</span>
                            </td>
                            <td width="20%" class="bet-selection-win-odd-cell">
                                <input type="number" class="form-control win-odd-denominator" value="1">
                            </td>
                            <td width="20%">
                                <select class="bet-placement-picker won">
                                    <option value="1">1/1</option>
                                    <option value="2">1/2</option>
                                    <option value="3">1/3</option>
                                    <option value="4">1/4</option>
                                    <option value="5">1/5</option>
                                </select>
                            </td>
                        </tr>
                    </tbody>

                </table>
            </fieldset>

            <fieldset>
                <legend>Calculate Bet</legend>


                <div class="form-group">
                    <div class="col-xs-12 text-center">
                        <button id="reset-bet" type="button" class="btn btn-default">Reset</button>
                        <button id="calculateBet" type="button" class="btn btn-primary">Calculate</button>
                    </div>
                </div>

            </fieldset>

            <fieldset>
                <legend>Results </legend>
                <table class="table table-bordered" id="result-table-1">

                    <thead>
                        <tr>
                            <th class="text-center">Unit Stake</th>
                            <th class="text-center">Bets</th>
                            <th class="text-center">Total Stake</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td class="text-center">1</td>
                            <td class="text-center">1</td>
                            <td class="text-center">1</td>
                        </tr>

                    </tbody>
                </table>

                <table class="table table-bordered" id="result-table-1">

                    <thead>
                        <tr>
                            <th class="text-center">Total Return</th>
                            <th class="text-center">Total Profit</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td class="text-center">2.0</td>
                            <td class="text-center">1.0</td>
                        </tr>

                    </tbody>
                </table>
            </fieldset>

        </form>

    </div>

    <div class="col-md-3"></div>
</div>


@Html.Partial("_BetOptionModal")

@section scripts{
    <script src="~/app/vendors/bootstrap-select-1.12.4/dist/js/bootstrap-select.min.js"></script>
    <script src="~/app/js/betCalculator.js"></script>
}

@section customStyles{
    <link href="~/app/vendors/bootstrap-select-1.12.4/dist/css/bootstrap-select.min.css" rel="stylesheet" />   
}